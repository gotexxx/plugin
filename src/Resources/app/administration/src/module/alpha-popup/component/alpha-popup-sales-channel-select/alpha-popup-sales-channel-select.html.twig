{% block sw_select_selection_item_text %}
    <sw-multi-select class="alpha-popup-sales-channel-select"
                     v-bind="popup"
                     :options="salesChannels"
                     value-property="id"
                     v-model:value="salesChannelIds">

        <template #selection-label-property="{ item }">
            {{ item.name || item.translated.name }}
        </template>
        <template #result-label-property="{ item }">
            {{ item.name || item.translated.name }}
        </template>
    </sw-multi-select>
{% endblock %}
